@{
    ViewData["Title"] = "Bowlers";
}

@model List<Bowler>

@if (ViewBag.TeamName is null)
{
    <h4>Bowlers</h4>
}
else
{
    <h4>Bowlers on Team @ViewBag.TeamName.TeamName</h4>
}


<a class="btn btn-primary" asp-controller="Home" asp-action="Bowler" asp-route-bowlerId="0">Add Bowler</a><br /><br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Middle Init</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td><a class="btn btn-warning" asp-controller="Home" asp-action="Bowler" asp-route-bowlerId="@b.BowlerID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-bowlerId="@b.BowlerID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

