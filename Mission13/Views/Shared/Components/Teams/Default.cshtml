
@{
}

@model IEnumerable<Team>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-team="" class="btn btn-outline-secondary btn-block">Home</a>

    @foreach(var t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-team="@t.TeamID" 
            class="btn btn-block @(ViewBag.SelectedTeam == @t.TeamID.ToString() ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a>
    }
</div>

